{{!-- welcoming message to the company --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.companyName}}!</h2>
    <h4>User, {{user.firstName}} {{user.lastName}}</h4>
    <h4>Email: {{user.email}}</h4>
  </div>
</div>

<div class="row mt-4">
    {{!-- adding new manufacturer --}}
    <div class="col-md-6">
        <h3>Add a new manufacturer:</h3>

    <form class="form">
      <div class="form-group">
        <label for="manufacturer-name">Manufacturer:</label>
        <input class="form-input" type="text" id="manufacturer-name" name="manufacturer-name" />
      </div>
      <div class="form-group">
        <button id="submit-manufacturer" type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    </div>

    {{#if user.usermanufacturers.length}}
  <div class="col-md-6 manufacturer-list">
    <h3>Current Manufacturers:</h3>

    {{#each user.usermanufacturers as |manufacturer|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/usermanufacturer/{{manufacturer.user_id}}">{{manufacturer.manufacturer_name}}</a></h4>
      {{manufacturer.manufacturer_name}}
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{manufacturer.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="./js/addManufacturer.js"></script>