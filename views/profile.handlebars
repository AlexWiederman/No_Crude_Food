{{!-- welcoming message to the company --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{company_name}}!</h2>
    <h4>User, {{first_name}} {{last_name}}</h4>
    <h4>Email: {{email}}</h4>
  </div>
</div>

<div class="row mt-4">
    {{!-- adding new manufacturer --}}
    <div class="col-md-6">
        <h3>Add a new manufacturer:</h3>

    <form class="form">
      <div class="form-group">
        <label for="manufacturer-name">Manufacturer:</label>
        <input class="form-input" type="text" id="manufacturer-name" name="manufacturer-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    </div>

    {{#if manufacturers.length}}
  <div class="col-md-6 project-list">
    <h3>Current Manufacturers:</h3>

    {{#each manufacturers as |manufacturer|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/usermanufacturer/{{manufacturer.id}}">{{manufacturer.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{manufacturer.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>